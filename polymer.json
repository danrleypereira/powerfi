{
  "entrypoint": "index.html",
  "shell": "src/app-elements/app-shell.html",
  "fragments": [
    "src/pages/main-page.html",
    "src/pages/artist-page.html",
    "src/pages/collection-page.html",
    "src/pages/not-found-page.html"
  ],
  "sources": [
    "images/**/*",
    "src/**/*",
    "fonts/**/*"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "!bower_components/webcomponentsjs/gulpfile.js",
    "manifest.json"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
